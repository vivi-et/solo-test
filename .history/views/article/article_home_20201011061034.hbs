{{!< main}}
<h1>Article home</h1>


<br>
<br>
<table class="ui collapsing celled table">
  <thead>
    <tr>
      <th class="">ID</th>
      <th class="">User</th>
      <th class="">Title</th>
      {{!-- <th>Text</th> --}}
      <th class="two wide">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each articles.rows}}
    <tr>
      <td>{{id}}</td>
      <td>{{user.username}}</td>
      <td><a href="/article/view/{{id}}">{{title}}</a></td>
      {{!-- <td>{{text}}</td> --}}
      <td>{{moments}}</td>
    </tr>
    {{/each}}

  </tbody>
</table>

<div class="ui pagination menu">
  <a class="item">
    <-
  </a>
  {{#each articles.index as |key|}}
  <a class="item" href="/article/{{key}}">
    {{key}}
  </a>
  {{/each}}
  <a class="item">
    ->
  </a>
</div>
<a href="article/add">
  <br>
  <br>
  <div class="ui button blue">Add Article</div>
</a>
